{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}



    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="mt-3 mb-3 float-md-right">
                    <a class="btn btn-sm btn-outline-info" href="/logout">Logout</a>
                </div>

                <h1>Post index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Excerpt</th>
                        <th scope="col">Tagline</th>
                        <th scope="col">Composition</th>
                        <th scope="col">Image</th>
                        <th scope="col">Meta_description</th>
                        <th scope="col">Meta_keywords</th>
                        <th scope="col">Created_at</th>
                        <th scope="col">Updated_at</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <th scope="row">{{ post.id }}</th>
                            <td>{{ post.title }}</td>
                            <td>{{ post.excerpt|raw }}</td>
                            <td>{{ post.tagline|raw }}</td>
                            <td>{{ post.composition|raw }}</td>
                            <td>{{ post.image }}</td>
                            <td>{{ post.metaDescription }}</td>
                            <td>{{ post.metaKeywords }}</td>
                            <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-info" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                                <a class="btn btn-sm btn-outline-success"
                                   href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
{#                <div class="mt-5">#}
{#                    <a href="{{ path('post_new') }}">Create new</a>#}
{#                </div>#}



            </div>
        </div>
    </div>

{% endblock %}
