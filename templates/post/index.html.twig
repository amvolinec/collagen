{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}

    <style>
        .e-table {
            max-height: 140px;
            overflow: auto;
        }
    </style>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-1"></div>
            <div style="background: #fafafa;" class="col-md-10">

                <div class="mt-3 mb-3 float-md-right">
                    <a class="btn btn-sm btn-outline-info" href="/logout">Logout</a>
                </div>

                <h1>Post index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Excerpt</th>
                        <th scope="col">Created_at</th>
                        <th scope="col">Updated_at</th>
                        <th style="min-width: 140px;">actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <th scope="row">{{ post.id }}</th>
                            <td>
                                <div class="e-table">{{ post.title }}</div>
                            </td>
                            <td class="e-table">
                                <div class="e-table">{{ post.excerpt|raw }}</div>
                            </td>
                            <td class="e-table">
                                <div class="e-table">{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                            </td>
                            <td class="e-table">
                                <div class="e-table">{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</div>
                            </td>
                            <td>
                                <div>
                                    <a class="btn btn-sm btn-outline-info"
                                       href="{{ path('post_show', {'id': post.id}) }}">show</a>
                                    <a class="btn btn-sm btn-outline-success"
                                       href="{{ path('post_edit', {'id': post.id}) }}">edit</a></div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {#                <div class="mt-5">#}
                {#                    <a href="{{ path('post_new') }}">Create new</a>#}
                {#                </div>#}


            </div>
            <div class="col-md-1"></div>
        </div>
    </div>

{% endblock %}
