{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Post</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ post.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ post.title }}</td>
                    </tr>
                    <tr>
                        <th>Excerpt</th>
                        <td>{{ post.excerpt }}</td>
                    </tr>
                    <tr>
                        <th>Body</th>
                        <td>{{ post.body }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>{{ post.image }}</td>
                    </tr>
                    <tr>
                        <th>Meta_description</th>
                        <td>{{ post.metaDescription }}</td>
                    </tr>
                    <tr>
                        <th>Meta_keywords</th>
                        <td>{{ post.metaKeywords }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('post_index') }}">back to list</a>

                <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

                {{ include('post/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
