{% extends 'base.html.twig' %}

{% block title %}Juvena Marine - создай свою красоту.{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <header class="col-header">
                    <img class="img-fluid" src="{{ asset('images/header.png') }}">
                </header>
                <div class="coll-banner">
                    <img class="img-fluid" src="{{ asset('images/banner.png') }}">
                </div>
                <div class="coll-tagline">{{  post.tagline|raw }}</div>
                <div class="coll-excerpt">{{  post.excerpt|raw }}</div>
                <div class="coll-comp-head">Состав:</div>
                <div class="coll-composition">{{  post.composition|raw }}</div>
                <div class="coll-comp-head">Описание:</div>
                <div class="coll-body">{{  post.body|raw }}</div>
                <div class="coll-footer" style="margin-top: -66px;">
                    <img class="img-fluid" src="{{ asset('images/footer.svg') }}">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
